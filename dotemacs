(defun add-path (p)
  (setq load-path (cons p load-path)))

(add-path "~/emacs/config")
(add-path "~/emacs/site-lisp")

(load "custom.el")
(load "options.el")
(load "keybindings.el")


;; Color Theme
(color-theme-initialize)
(color-theme-calm-forest)


