alias cp='nocorrect cp'
alias mv='nocorrect mv'
alias rm='nocorrect rm -ir'
alias mkdir='nocorrect mkdir'
alias :q='exit'
alias :wq='exit'

alias df='df -h'
alias du='du -h'
alias pstree='pstree -h'

alias a="ls "
alias aa="ls -a "
alias al="ls -l"
alias aal="ls -al"
alias ala="ls -al"
alias la="ls -a"
alias ll="ls -l"
alias lla="ls -al"
alias lal="ls -al"

